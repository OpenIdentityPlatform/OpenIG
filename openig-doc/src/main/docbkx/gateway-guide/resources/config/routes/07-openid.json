{
  "heap": [
    {
      "comment": "To reuse providers, configure them in the parent route",
      "name": "openam",
      "type": "OAuth2Provider",
      "config": {
        "clientId": "${projectName}",
        "clientSecret": "password",
        "authorizeEndpoint":
          "http://openam.example.com:8088/openam/oauth2/authorize",
        "tokenEndpoint":
          "http://openam.example.com:8088/openam/oauth2/access_token",
        "userInfoEndpoint":
          "http://openam.example.com:8088/openam/oauth2/userinfo"
      }
    }
  ],
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "type": "OAuth2ClientFilter",
          "config": {
            "clientEndpoint": "/openid",
            "requireHttps": false,
            "requireLogin": true,
            "target": "${exchange.openid}",
            "scopes": [
              "openid",
              "profile"
            ],
            "failureHandler": {
              "type": "StaticResponseHandler",
              "config": {
                "comment": "Trivial failure handler for debugging only",
                "status": 500,
                "reason": "Error",
                "entity": "${exchange.openid}"
              }
            },
            "providers": [ "openam" ]
          }
        }
      ],
      "handler": {
        "type": "Chain",
        "config": {
          "filters": [
            {
              "type": "StaticRequestFilter",
              "config": {
                "method": "POST",
                "uri": "http://www.example.com:8081",
                "form": {
                  "username": [
                    "${exchange.openid.user_info.family_name}"
                  ],
                  "password": [
                    "${exchange.openid.user_info.name}"
                  ]
                }
              }
            }
          ],
          "handler": "ClientHandler"
        }
      }
    }
  },
  "condition": "${matches(exchange.request.uri.path, '^/openid')}",
  "baseURI": "http://www.example.com:8080"
}
