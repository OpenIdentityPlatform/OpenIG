{
    "handler": {
        "type": "DispatchHandler",
        "config": {
            "bindings": [
                {
                    "condition": "${exchange.request.uri.path == '/login'}",
                    "handler": {
                        "type": "Chain",
                        "config": {
                            "filters": [
                                {
                                    "type": "StaticRequestFilter",
                                    "config": {
                                        "method": "POST",
                                        "uri": "https://www.example.com:8444/login",
                                        "form": {
                                            "username": [
                                                "${exchange.request.headers['username'][0]}"
                                            ],
                                            "password": [
                                                "${exchange.request.headers['password'][0]}"
                                            ]
                                        }
                                    }
                                }
                            ],
                            "handler": "ClientHandler"
                        }
                    }
                },
                {
                    "handler": "ClientHandler",
                    "baseURI": "http://www.example.com:8081"
                }
            ]
        }
    },
    "condition": "${matches(exchange.request.uri.query, 'demo=headers')}"
}
