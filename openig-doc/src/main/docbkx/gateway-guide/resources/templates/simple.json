{
    "heap": [
        {
            "name": "DispatchHandler",
            "type": "DispatchHandler",
            "config": {
                "bindings": [
                    {
                        "condition": "${exchange.request.uri.path == '/login'}",
                        "handler": {
                            "type": "Chain",
                            "config": {
                                "filters": [
                                    {
                                        "type": "StaticRequestFilter",
                                        "config": {
                                            "method": "POST",
                                            "uri": "https://TARGETIP/login",
                                            "form": {
                                                "USER": [
                                                    "MY_USERNAME"
                                                ],
                                                "PASSWORD": [
                                                    "MY_PASSWORD"
                                                ]
                                            }
                                        }
                                    }
                                ],
                                "handler": "ClientHandler"
                            }
                        },
                        "baseURI": "http://TARGETIP"
                    },
                    {
                        "handler": "ClientHandler",
                        "baseURI": "http://TARGETIP"
                    }
                ]
            }
        },
        {
            "name": "ClientHandler",
            "type": "ClientHandler"
        }
    ],
    "handler": "DispatchHandler"
}
